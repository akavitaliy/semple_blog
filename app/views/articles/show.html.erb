<h2><%= @article.title %></h2>
<br>
<p><%= @article.text %></p>
<br>
<hr>
<h2>Comments:</h2>

<% @article.comments.each do |comment| %>

   <i><h4> 
      <%= comment.author %> 
   </h4></i>

   <p> 
      <%= comment.body %> 
   </p> 
   <br>
<% end %>

<hr>
<h2>Add comment</h2>
<p>
    <%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>	
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>	
	</p>

	<p>
		<%= f.submit 'comment' %>
	</p>     
    <% end %>
</p>
